#!/usr/bin/env bash

# Remove characters
# < (less than)
# > (greater than)
# : (colon - sometimes works, but is actually NTFS Alternate Data Streams)
# " (double quote)
# / (forward slash)
# \ (backslash)
# | (vertical bar or pipe)
# ? (question mark)
# * (asterisk)
for f in *\|*; do mv "$f" "$(echo "$f" | sed 's/|/∣/g')"; done
for f in *\"*; do mv "$f" "$(echo "$f" | sed 's/"/ˮ/g')"; done
for f in *\:*; do mv "$f" "$(echo "$f" | sed 's/:/⁚/g')"; done
for f in *\?*; do mv "$f" "$(echo "$f" | sed 's/?/ʔ/g')"; done
for f in *\./; do mv "$f" "$(echo "$f" | sed 's/\./܂/g')"; done
for f in *\<*; do mv "$f" "$(echo "$f" | sed 's/</‹/g')"; done
for f in *\>*; do mv "$f" "$(echo "$f" | sed 's/>/›/g')"; done



